2Ô∏è‚É£ GROUP ADMIN PAGE (Approve / Reject) ‚úÖ

import { useEffect, useState } from "react";

const STORAGE_KEY = "smart_groups";

export default function GroupAdmin({ groupId }) {
  const [group, setGroup] = useState(null);

  const loadGroup = () => {
    const groups = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];
    setGroup(groups.find(g => g.id === groupId));
  };

  useEffect(() => {
    loadGroup();
  }, [groupId]);

  const updateStatus = (email, status) => {
    const groups = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];

    const updated = groups.map(g => {
      if (g.id === groupId) {
        g.members = g.members.map(m =>
          m.email === email ? { ...m, status } : m
        );
      }
      return g;
    });

    localStorage.setItem(STORAGE_KEY, JSON.stringify(updated));
    loadGroup();
  };

  if (!group) return <p>No group found</p>;

  return (
    <div className="page">
      <h2>{group.name} ‚Äì Group Admin</h2>

      {group.members.map(m => (
        <div key={m.email} className="member-card">
          <b>{m.name}</b>
          <p>{m.email}</p>
          <span>{m.status}</span>

          {m.status === "pending" && (
            <>
              <button onClick={() => updateStatus(m.email, "approved")}>Approve</button>
              <button onClick={() => updateStatus(m.email, "rejected")} className="danger">Reject</button>
            </>
          )}
        </div>
      ))}
    </div>
  );
}


