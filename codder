import { useEffect, useState } from "react";

const STORAGE_KEY = "smart_groups";

export default function AdminDashboard() {
  const [groups, setGroups] = useState([]);

  useEffect(() => {
    setGroups(JSON.parse(localStorage.getItem(STORAGE_KEY)) || []);
  }, []);

  return (
    <div className="page">
      <h1>System Admin</h1>

      {groups.map(g => (
        <div key={g.id} className="card">
          <h3>{g.name}</h3>
          <p>Target: {g.target}</p>
          <p>Balance: {g.balance}</p>
          <p>Members: {g.members.length}</p>
        </div>
      ))}
    </div>
  );
}


