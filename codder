1Ô∏è‚É£ COLLABORATION PAGE (Create + Join Group) ‚úÖ

import { useEffect, useState } from "react";

const STORAGE_KEY = "smart_groups";

export default function Collaboration() {
  const [groups, setGroups] = useState([]);
  const [name, setName] = useState("");
  const [goal, setGoal] = useState("");
  const [target, setTarget] = useState("");
  const [cycle, setCycle] = useState("Monthly");

  const [joinName, setJoinName] = useState("");
  const [joinEmail, setJoinEmail] = useState("");
  const [joinPhone, setJoinPhone] = useState("");

  useEffect(() => {
    setGroups(JSON.parse(localStorage.getItem(STORAGE_KEY)) || []);
  }, []);

  const saveGroups = (data) => {
    setGroups(data);
    localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
  };

  /* CREATE GROUP */
  const createGroup = () => {
    if (!name || !goal || !target) return alert("Fill all fields");

    const newGroup = {
      id: Date.now(),
      name,
      goal,
      target: Number(target),
      cycle,
      balance: 0,
      adminEmail: "admin@group.com",
      members: [],
      logs: []
    };

    saveGroups([...groups, newGroup]);
    setName(""); setGoal(""); setTarget("");
  };

  /* JOIN GROUP */
  const joinGroup = (groupId) => {
    if (!joinName || !joinEmail || !joinPhone)
      return alert("Fill join form");

    const updated = groups.map(g => {
      if (g.id === groupId) {
        g.members.push({
          name: joinName,
          email: joinEmail,
          phone: joinPhone,
          balance: 0,
          status: "pending"
        });
      }
      return g;
    });

    saveGroups(updated);
    alert("Join request sent");
    setJoinName(""); setJoinEmail(""); setJoinPhone("");
  };

  return (
    <div className="page">
      <h2>Create Group</h2>

      <input placeholder="Group Name" value={name} onChange={e=>setName(e.target.value)} />
      <input placeholder="Goal" value={goal} onChange={e=>setGoal(e.target.value)} />
      <input type="number" placeholder="Target Amount" value={target} onChange={e=>setTarget(e.target.value)} />
      <select value={cycle} onChange={e=>setCycle(e.target.value)}>
        <option>Daily</option>
        <option>Weekly</option>
        <option>Monthly</option>
      </select>
      <button onClick={createGroup}>Create Group</button>

      <h2>Available Groups</h2>

      {groups.map(g => (
        <div key={g.id} className="card">
          <h3>{g.name}</h3>
          <p>Goal: {g.goal}</p>
          <p>Target: {g.target} RWF</p>

          <input placeholder="Your Name" value={joinName} onChange={e=>setJoinName(e.target.value)} />
          <input placeholder="Email" value={joinEmail} onChange={e=>setJoinEmail(e.target.value)} />
          <input placeholder="Phone" value={joinPhone} onChange={e=>setJoinPhone(e.target.value)} />

          <button onClick={() => joinGroup(g.id)}>Join Group</button>
        </div>
      ))}
    </div>
  );
}


