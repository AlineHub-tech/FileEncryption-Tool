1Ô∏è‚É£ TEXT ANIMATION (NO LIBRARY ‚Äì CSS + JS)

App.js (Hero Section)

import { useEffect, useState } from "react";
import services from "./data";
import "./styles.css";

export default function App() {
  const texts = [
    "Graphic Design",
    "Website Development",
    "Branding & Printing",
    "ICT & Photography"
  ];
  const [index, setIndex] = useState(0);
  const [filter, setFilter] = useState("All");

  useEffect(() => {
    const interval = setInterval(() => {
      setIndex((prev) => (prev + 1) % texts.length);
    }, 2000);
    return () => clearInterval(interval);
  }, []);

  const filteredServices =
    filter === "All"
      ? services
      : services.filter((s) => s.category === filter);

  return (
    <>
      {/* NAVBAR */}
      <nav className="navbar">
        <h2>A Better T Solutions</h2>
        <a href="https://wa.me/250788123456" className="order-btn">Order Now</a>
      </nav>

      {/* HERO */}
      <section className="hero">
        <h1>
          Professional <span className="animated-text">{texts[index]}</span>
        </h1>
        <p>All services in one place with clear pricing</p>
      </section>

      {/* FILTER */}
      <div className="filters">
        {["All","Graphics","Websites","ICT"].map(btn => (
          <button
            key={btn}
            className={filter === btn ? "active" : ""}
            onClick={() => setFilter(btn)}
          >
            {btn}
          </button>
        ))}
      </div>

      {/* SERVICES */}
      <section className="grid">
        {filteredServices.map((s, i) => (
          <div k
