3Ô∏è‚É£ GROUP DASHBOARD (Deposit / Withdraw ‚Äì Approved Only) ‚úÖ

import { useEffect, useState } from "react";

const STORAGE_KEY = "smart_groups";

export default function GroupDashboard({ groupId, userEmail }) {
  const [group, setGroup] = useState(null);
  const [amount, setAmount] = useState("");

  const loadGroup = () => {
    const groups = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];
    setGroup(groups.find(g => g.id === groupId));
  };

  useEffect(() => {
    loadGroup();
  }, [groupId]);

  const member = group?.members.find(m => m.email === userEmail);

  const deposit = () => {
    if (!member || member.status !== "approved")
      return alert("Not approved yet");

    const amt = Number(amount);
    if (!amt) return;

    const groups = JSON.parse(localStorage.getItem(STORAGE_KEY));

    const updated = groups.map(g => {
      if (g.id === groupId) {
        g.balance += amt;
        g.members = g.members.map(m =>
          m.email === userEmail ? { ...m, balance: m.balance + amt } : m
        );
      }
      return g;
    });

    localStorage.setItem(STORAGE_KEY, JSON.stringify(updated));
    loadGroup();
    setAmount("");
  };

  if (!group) return null;

  return (
    <div className="page">
      <h2>{group.name} Dashboard</h2>
      <p>Group Balance: {group.balance} RWF</p>

      {member?.status === "approved" ? (
        <>
          <input type="number" value={amount} onChange={e=>setAmount(e.target.value)} />
          <button onClick={deposit}>Deposit</button>
        </>
      ) : (
        <p>Waiting for approval‚Ä¶</p>
      )}
    </div>
  );
}


